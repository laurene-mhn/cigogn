<div class="container" my-3>
  <%# <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><i class="fas fa-heart"></i> Favorites</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"><i class="fas fa-trash"></i> Declined</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false"><i class="fas fa-baby"></i> Matches</a>
    </li>
  </ul> %>

  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <br>
    <h3>Favorites names</h3>
    <hr>
    <% if @choices_accepted.nil? %>
      <p>You have no favorite names now. Please swipe !</p>
    <% else %>
      <% @choices_accepted.each do |choice| %>
      <div class="fav-cards <%= choice.name.gender %>-fav-cards">
        <div class="fav-content">
          <%= choice.name.name.capitalize %>
        </div>
        <%= link_to choice_path(choice), method: :put do  %>
          <div class="fav-actions">
            <i class="far fa-trash-alt"></i>
          </div>
        <% end %>
      </div>
      <% end %>
    <% end %>
    </div>


    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <ul>
        <% @choices_declined.each do |choice| %>
          <li><%= choice.name.name %> </li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
      <p>To be designed</p>
    </div>
  </div>
</div>
