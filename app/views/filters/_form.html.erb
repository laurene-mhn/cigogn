
<%= simple_form_for @filter, html: { class: "form-filters"} do |f| %>

  <%= f.input :gender, as: :radio_buttons, label: "", collection: ['all', 'girl', 'boy'], wrapper: :vertical_collection_inline, checked: 'all', legend_html: { class: "size-label" } %>

  <%#= f.input :gender,
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'gender-wrapper',
              item_wrapper_class: 'gender-item',
              input_html: {class: 'gender-selector'},
              checked: 'all',
              collection: ['all', 'boy', 'girl'] %>


  <%= f.input :origin,
              collection: Filter::ORIGIN,
              label_html: { class: "size-label" },
              as: :check_boxes,
              input_html: { class: "tag-selector" },
              item_wrapper_class: 'tag-item' %>

  <%= f.input :popularity,
              collection: Filter::POPULARITY,
              as: :check_boxes,
              input_html: { class: "tag-selector" },
              item_wrapper_class: 'tag-item' %>


  <%#= f.input :length, collection: Filter::LENGTH, label_html: { class: "size-label" }%>

  <%= f.input :length,label:"Name size",
              collection: Filter::LENGTH,
              as: :check_boxes,
              input_html: { class: "tag-selector" },
              item_wrapper_class: 'tag-item' %>

  <%#= more filters %>

  <%= f.input :astrology,label:"Astrology sign",
                collection: Filter::ASTROLOGY,
                as: :check_boxes,
                input_html: { class: "tag-selector" },
                item_wrapper_class: 'tag-item' %>


    <%= f.input :start_with, placeholder:"Type first letter", label_html: { class: "size-label" } %>

    <%= f.input :end_with, placeholder:"Type last syllable", label_html: { class: "size-label" } %>


  <%= f.input :hyphenated_name, label:"Hyphenated name", input_html: { class: "toggle size-label" }%>

  <div class="text-center">
    <%= f.button :submit, value:"View names", class: "btn btn-form" %>

    <%#= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  </div>

<% end %>
