<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to names_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>
  <div class="text-logo">Cigogn</div>

   <% if user_signed_in? %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to profile_path do %>
            <i class="far fa-user"></i>Profile
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to choices_path do  %>
            <i class="far fa-heart"></i>Prénoms favoris
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to matches_path do %>
            <i class="far fa-star"></i>Nos matchs
          <% end %>
        </li>

        <li class="nav-item">
          <% if current_user.filter %>
            <%= link_to edit_filter_path(current_user.filter) do  %>
              <i class="fas fa-sliders-h"></i>Préférences
            <% end %>
          <% else %>
            <%= link_to new_filter_path do  %>
              <i class="fas fa-sliders-h"></i>Préférences
            <% end %>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete do  %>
            <i class="fas fa-sign-out-alt"></i>Se déconnecter
          <% end %>
        </li>
      </ul>
    </div>

  <% else %>
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
  <% end %>

</div>
